<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background of the battery progress bar -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="#E0E0E0"/> <!-- Light gray color for the background -->
        </shape>
    </item>
    <!-- Progress indicator of the battery progress bar -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <solid android:color="#ADD8E6"/> <!-- Light blue color for the progress -->
            </shape>
        </clip>
    </item>
</layer-list>